---
// src/components/CalculadoraSection.astro

// Aquí podés cambiar las URLs de las imágenes
const images = [
  "/images/aire1.jpg",
  "/images/aire2.jpg",
];

let currentIndex = 0;
---

<section class="max-w-7xl mx-auto px-4 py-12 ">
  <div class="sm:grid grid-cols-3 gap-6 items-center ">
    <!-- Imagen animada que cambia -->
    <div class="col-span-2 overflow-hidden rounded-lg relative aspect-[16/9] p-0.5 ">
      <img
        src="../../public/blond-familly.png"
        alt="Aire acondicionado 1"
        class="w-full h-full object-cover rounded-lg transform transition-transform duration-1000 ease-in-out hover:scale-105 animate-zoomFade"
      />
      <img
        src="../../public/Aires del Rosario.jpg"
        alt="Aire acondicionado 2"
        class="w-full h-full object-cover absolute top-0 left-0 opacity-0 animate-zoomFade delay-5000"
        style="animation-fill-mode: forwards;"
      />
    </div>

    <!-- Card de calculadora -->
    <div class="bg-white rounded-lg shadow-lg p-8 flex flex-col justify-center ">
      <h3 class="text-xl font-semibold mb-4">Calcula cuántas frigorías necesitas para tu ambiente</h3>
      <p class="mb-6 text-gray-600">
        Descubrí qué aire acondicionado es el ideal para vos con nuestra guía paso a paso.
      </p>
      <button class="self-start bg-blue-600 text-white px-5 py-3 rounded hover:bg-blue-700 transition">
        <a href="/calculo">Empezar cálculo</a>
      </button>
    </div>
  </div>
</section>
