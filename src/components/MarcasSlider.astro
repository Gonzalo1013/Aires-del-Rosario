---
// src/components/MarcasSlider.astro
const marcas = [{

  name:"samsung", src:"/public/samsung-icon.png"}, 
  {name:"LG", src:"/public/lg-icon.png"}, 
  {name:"hitachi", src:"/public/hitachi-icon.png"}, 
  {name:"surrey", src:"/public/surrey-icon.png"}, 
  {name:"york", src:"/public/york-icon.png"}, 
  {name:"toshiba", src:"/public/toshiba-icon.png"}, 
  {name:"whirlpool", src:"/public/whirlpool-icon.png"},
  {name:"daikin", src:"/public/daikin-icon.png"},
  // {name:"carrier", src:"/public/carrier-icon.png"},
  // {name:"midea", src:"/public/midea-icon.png"}, 
  // {name:"tophouse", src:"/public/tophouse-icon.png"}, 
  // {name:"philco", src:"/public/philco-icon.png"},
  // {name:"electrolux", src:"/public/electrolux-icon.png"},
  // {name:"fujitsu", src:"/public/fujitsu-icon.png"},
  // {name:"sanyo", src:"/public/sanyo-icon.png"},
];
---

<section class="py-12 bg-white text-center">
  <h2 class="text-2xl font-bold mb-6">Trabajamos todas las marcas</h2>

  <div class="overflow-hidden">
    <div class="flex animate-slide gap-8 whitespace-nowrap">
      {marcas.concat(marcas).map((marca, index) => (
        <div
          class="text-lg font-medium text-gray-600 shrink-0"
          style="min-width: 120px"

        >
          <img src={marca.src} alt={marca.name} class="size-20 sm:size-32  mx-auto mb-2 rounded-full p-1 shadow-md" />
          
        </div>
      ))}
    </div>
  </div>
</section>
