---
// src/components/MarcasSlider.astro
const marcas = [
  {
    name: 'samsung',
    src: '/samsung-icon.png',
  },
  { name: 'BGH', src: '/bgh-icon.jpg' },
  { name: 'LG', src: '/lg-icon.png' },
  { name: 'hitachi', src: '/hitachi-icon.png' },
  { name: 'surrey', src: '/surrey-icon.png' },
  { name: 'york', src: '/york-icon.png' },
  { name: 'toshiba', src: '/toshiba-icon.png' },
  { name: 'whirlpool', src: '/whirlpool-icon.png' },
  { name: 'daikin', src: '/daikin-icon.png' },
  { name: 'carrier', src: '/carrier-icon.png' },
  { name: 'midea', src: '/midea-icon.png' },
  { name: 'tophouse', src: '/tophouse-icon.png' },
  { name: 'philco', src: '/philco-icon.png' },
  { name: 'electrolux', src: '/electrolux-icon.png' },
  { name: 'fujitsu', src: '/fujitsu-icon.png' },
  { name: 'sanyo', src: '/sanyo-icon.png' },
];
---

<section
  class="mb-5 sm:mb-10 md:mb-16 text-center text-gray-100 max-w-md md:max-w-4xl lg:max-w-dvw mx-auto"
>
  <h2
    class="text-xl sm:text-2xl md:text-3xl lg:text-4xl font-bold mb-5 sm:mb-10 md:mb-16"
  >
    Trabajamos todas las marcas
  </h2>

  <div class="overflow-hidden">
    <div
      id="marcas-slider"
      class="flex animate-slide gap-8 whitespace-nowrap"
      style="width: max-content"
    >
      {
        marcas.concat(marcas).map((marca) => (
          <div
            class="text-lg font-medium text-gray-600 shrink-0"
            style="md:min-width: 120px"
          >
            <img
              src={marca.src}
              alt={marca.name}
              class="size-20 sm:size-32 bg-white mx-auto mb-2 rounded-full p-1 shadow-md"
            />
          </div>
        ))
      }
    </div>
  </div>
</section>
